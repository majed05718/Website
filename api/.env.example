# api/.env (للـ SaaS)
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Supabase Configuration (مشروعك الموجود)
SUPABASE_URL=https://your-existing-project.supabase.co
SUPABASE_ANON_KEY=your-existing-anon-key
SUPABASE_SERVICE_KEY=your-existing-service-key

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-make-it-very-long-and-complex

# OpenAI Configuration (إذا كنت تستخدمه)
OPENAI_API_KEY=your-openai-key

# WhatsApp Configuration (للـ SaaS - متغير)
# ملاحظة: التوكنات ستأتي من قاعدة البيانات per office
WHATSAPP_META_APP_ID=your-meta-app-id
WHATSAPP_META_APP_SECRET=your-meta-app-secret
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# n8n Integration Base URL
N8N_BASE_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Monitoring
SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/your-project-id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
