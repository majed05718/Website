{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/": [
        "src/"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "next.config.js",
    "next.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "sentry.config.ts",
    "sentry*.config.*",
    "../api",
    "../api/**",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
